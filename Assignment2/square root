import math

def sum_of_square_roots(num1, num2, num3):
    return math.sqrt(num1) + math.sqrt(num2) + math.sqrt(num3)

num1 = float(input("Enter the first number: "))
num2 = float(input("Enter the second number: "))
num3 = float(input("Enter the third number: "))

sum_sqrt = sum_of_square_roots(num1, num2, num3)

print(f"The sum of the square roots of {num1}, {num2}, and {num3} is {sum_sqrt:.2f}.")
